<?xml version="1.0"?>
<robot name="cfr" xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:macro name="blades" params="prefix">

        <link name="${prefix}front_blade">
            <inertial>
              <mass value="0.01" />
              <origin xyz="0 0 0" />
              <inertia  ixx="0.02467" ixy="0" ixz="0" iyy="0.04411" iyz="0" izz="0.02467" />
            </inertial>
            <visual>
              <origin xyz="-0.46 0 0" rpy="0 0 0" />
              <geometry>
                <mesh filename="file://$(find cfr_description)/meshes/CFR_blade_A.dae" />
              </geometry>
            </visual>
        </link>

        <link name="${prefix}rear_blade">
          <inertial>
            <mass value="0.01" />
            <origin xyz="0 0 0" />
            <inertia  ixx="0.02467" ixy="0" ixz="0" iyy="0.04411" iyz="0" izz="0.02467" />
          </inertial>
          <visual>
            <origin xyz="0.46 0 0" rpy="0 0 0" />
            <geometry>
              <mesh filename="file://$(find cfr_description)/meshes/CFR_blade_B.dae" />
            </geometry>
          </visual>
        </link>
      
        <!-- <gazebo reference="${prefix}_blade">
            <mu1 value="1.0"/>
            <mu2 value="0.5"/>
            <kp value="100.0" />
            <kd value="1.0" />
            <fdir1 value="1 0 0"/>
        </gazebo> -->
      
        <joint name="${prefix}front_blade_joint" type="continuous">
            <origin xyz="0.46 0 0" rpy="0 0 0" />
            <parent link="base_footprint"/>
            <child link="${prefix}front_blade"/>
            <axis xyz="0 0 1" rpy="0 0 0" />
        </joint>

        <joint name="${prefix}rear_blade_joint" type="continuous">
            <origin xyz="-0.46 0 0" rpy="0 0 0" />
            <parent link="base_footprint"/>
            <child link="${prefix}rear_blade"/>
            <axis xyz="0 0 1" rpy="0 0 0" />
        </joint>

        <ros2_control name="${prefix}cfr_hardware_controller" type="system">
            <hardware>
                <plugin>gazebo_ros2_control/GazeboSystem</plugin>
            </hardware>
            
            <joint name="${prefix}front_blade_joint">
              <command_interface name="velocity">
                <param name="min">-120</param>
                <param name="max">120</param>
              </command_interface>
              <state_interface name="position"/>
              <state_interface name="velocity"/>
            </joint>

            <joint name="${prefix}rear_blade_joint">
              <command_interface name="velocity">
                <param name="min">120</param>
                <param name="max">-120</param>
              </command_interface>
              <state_interface name="position"/>
              <state_interface name="velocity"/>
            </joint>
      
        </ros2_control>

    </xacro:macro>

</robot>
